{{#if @model.file}}
  <BsModalSimple
    @open={{true}}
    @title={{@model.filePath}}
    @closeTitle="Ok"
    @submitTitle={{null}}
    @size="lg"
    @closeButton={{true}}
    @onHidden={{this.close}}
    @fade={{true}}
    @backdrop={{true}}
    @backdropClose={{true}}
    @renderInPlace={{true}}>
    <pre>
      {{#each this.fileLines as |line idx|}}
        <code>{{line}}</code>
      {{/each}}
    </pre>
  </BsModalSimple>
{{/if}}
