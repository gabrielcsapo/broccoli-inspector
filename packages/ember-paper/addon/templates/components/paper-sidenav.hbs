{{! template-lint-disable no-action no-implicit-this }}
{{#unless closed}}
  <PaperBackdrop @opaque={{true}} @class="md-sidenav-backdrop" @onClick={{action "onBackdropTap"}} />
{{/unless}}

<PaperSidenavInner
  @class={{class}}
  @name={{name}}
  @position={{position}}
  @lockedOpen={{lockedOpen}}
  @closed={{closed}}
  @closeOnClick={{closeOnClick}}
  @onToggle={{action "onToggle"}}
  ...attributes>
  {{yield}}
</PaperSidenavInner>
